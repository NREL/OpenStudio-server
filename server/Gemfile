source 'http://rubygems.org'

gem 'rails', '3.2.17'

# data modules
gem 'json'

# database modules
gem 'mongoid', '~> 3.1.6'
gem 'paperclip', '3.5.2' # do not upgrade because breaks the after_commit 
gem 'mongoid-paperclip', :require => 'mongoid_paperclip'

# R
gem 'rserve-simpler'
gem 'uuid'

# net-*
gem 'net-http-persistent'
gem 'net-scp'
gem 'net-ssh'
gem 'net-sftp'

# javascript
gem 'libv8'
gem 'execjs'
gem 'therubyracer'
gem 'backbone-on-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  # sass versions above 3.2.10 giving 'text file busy' error on vagrant windows
  gem 'sass', '3.2.10'
  gem 'sass-rails', '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'bootstrap-sass', '~> 2.3.2.2'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test do
  gem 'rspec'
  gem 'rspec-rails', '~> 2.0'
  gem 'mongoid-rspec'
  gem 'rspec-html-matchers'
  gem 'factory_girl_rails'
  gem 'ci_reporter', '~> 1.9.0'

  # these two openstudio gems are needed for starting up the cluster
  # and running the analysis in the integration tests
  gem 'openstudio-aws'
  gem 'openstudio-analysis'
end

# job queuing
gem 'delayed_job_mongoid'
gem 'daemons'
gem 'childprocess'

# http(s) requests
gem 'faraday'

# worker node gems (because server can run as worker)
gem 'libxml-ruby'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
  #gem 'ruby-debug' if RAILS_VERSION > "2.0.0"
end

# Deploy with Capistrano
gem 'capistrano'

