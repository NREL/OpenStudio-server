source 'http://rubygems.org'

gem 'rails', '4.2'

# data modules
gem 'json'
gem 'jbuilder'
gem 'rubyzip'

# database modules
gem 'mongoid', '~> 5.1'
gem 'paperclip', '~> 4.3'
gem 'mongoid-paperclip', require: 'mongoid_paperclip'

# R
gem 'rserve-simpler'

# net-*
gem 'net-http-persistent'
gem 'net-scp'
gem 'net-ssh'
gem 'net-sftp'

# javascript
gem 'libv8', :platforms => :ruby
gem 'execjs'
gem 'therubyracer', :platforms => :ruby

# other useful gems
gem 'parallel'
gem 'sys-filesystem'

# web ui
# gem 'will_paginate'
gem 'jquery-rails'
gem 'kaminari'

# job queuing
gem 'delayed_job_mongoid'
gem 'daemons'

# http(s) requests
gem 'faraday' # TODO: can this be deprecated

# Gems used only for assets and not required
# in production environments by default.
gem 'sass'
gem 'coffee-rails'
gem 'bootstrap-sass'
gem 'sass-rails'
gem 'uglifier'
gem 'sprockets-rails'

# For workers - and other dependencies for measures
gem 'openstudio-workflow', github: 'NREL/OpenStudio-workflow-gem', branch: 'intermediate-pat2.0'
gem 'openstudio-standards', github: 'NREL/openstudio-standards', require: false
gem 'msgpack'
gem 'multi_json'
gem 'oj'
gem 'rest-client'
gem 'libxml-ruby', :platforms => :ruby
gem 'os'

group :development, :test do
  gem 'sextant' # navigate to /rails/routes to see routes
  gem 'better_errors'
  gem 'meta_request'
  gem 'ruby-prof'

  gem 'capybara'
  gem 'selenium-webdriver'
  gem 'rspec-rails'
  gem 'mongoid-rspec'
  gem 'rspec-html-matchers'
  gem 'factory_girl_rails'
  gem 'ci_reporter'

  # these two openstudio gems are needed for starting up the cluster
  # and running the analysis in the integration tests
  gem 'openstudio-aws'
  gem 'openstudio-analysis', github: 'NREL/OpenStudio-analysis-gem', branch: 'develop'
end

