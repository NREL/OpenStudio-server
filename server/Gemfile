gem 'rest-client'

# add to Gemfile to make available to Ruby scripts running via initialize/finalize scripts
gem 'rubyXL'

# linux based js runtime libraries
if RUBY_PLATFORM =~ /linux/
  gem 'execjs'
  gem 'libv8'
  gem 'therubyracer'
elsif RUBY_PLATFORM =~ /darwin/
  gem 'execjs', github: 'NREL/execjs'
end

