<h1>Listing Measures</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Measure Type</th>
    <th>Description</th>
    <th>Arguments/Variables</th>
    <th>Value Instances</th>
  <tr>
  </thead>
  <tbody>
  <% @measures.each do |measure| %>
      <tr>
        <td><%= link_to_if(measure.name, measure.name, measure_path(measure)) %></td>
        <td><%= measure.measure_type if measure.measure_type %></td>
        <td><%= measure.description %></td>
        <td>
          <% measure.variables.each do |var| %>
              <%= link_to var.name, variable_path(var) %></br>
          <% end %>
        </td>
        <td><%= measure.values if measure.values %></td>
      </tr>
  <% end %>
  </tbody>
</table>

