<h2>Variables</h2>

<%= form_tag modify_analysis_variables_path, :method => :post do |f| %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Display Name</th>
      <th>Machine Name</th>
      <th>Units</th>
      <th>Visualize</th>
      <th>Export</th>
      <th>Actions</th>
    <tr>
    </thead>
    <tbody>
      <% @variables.each do |var| %>
        <tr>
         <td><%= var.display_name %></td>
         <td><%= var.name %></td>
         <td><%= var.units %></td>
         <% v_checked = false %>
         <% if var.visualize %>
           <% v_checked = true %>
         <% end %>
          <% e_checked = false %>
          <% if var.export %>
            <% e_checked = true %>
          <% end %>
         <td><%= check_box_tag 'visualize_ids[]', var.id, v_checked %></td>
         <td><%= check_box_tag 'export_ids[]', var.id, e_checked %></td>
         <td><%= link_to "Edit", edit_variable_path(var) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div style="text-align:center;">
    <%= submit_tag "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>
