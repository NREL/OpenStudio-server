<p id="notice"><%= notice %></p>

<h1>Debug Log</h1>

<h2>Server Configuration</h2>
<% if @server %>
    <table id="datapointtable" class="tablesorter table table-striped">
      <thead>
      <tr>
        <th>Field</th>
        <th>Value</th>
      </tr>
      </thead>
      <tbody>
      <% @server.each do |k, v| %>
          <tr>
            <td><%= k %></td>
            <td><%= v %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<h2>Worker Configuration</h2>
<% @workers.each do |worker| %>
    <table id="datapointtable" class="tablesorter table table-striped">
      <thead>
      <tr>
        <th>Field</th>
        <th>Value</th>
      </tr>
      </thead>
      <tbody>
      <% worker.each do |k, v| %>
          <tr>
            <td><%= k %></td>
            <td><%= v %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<h2>Logs</h2>
<script>
    $(document).ready(function () {
                $("#datapointtable").tablesorter();
            }
    );

</script>
<table id="datapointtable" class="tablesorter table table-striped">
  <thead>
  <tr>
    <th>Analysis Status Message(s)</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @analysis.status_message if @analysis.status_message %></td>
  </tr>
  </tbody>
</table>

<table id="datapointtable" class="tablesorter table table-striped">
  <thead>
  <tr>
    <th>RServe Messages</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @rserve_log.gsub("\n", "</br>").html_safe unless @rserve_log.nil? %></td>
  </tr>
  </tbody>
</table>

<table id="datapointtable" class="tablesorter table table-striped">
  <thead>
  <tr>
    <th>Simulate Data Point Log Messages</th>
  </tr>
  </thead>
  <tbody>
  <% @analysis.data_points.each do |dp| %>
      <tr class="success">
        <td><%= dp.name unless dp.name.nil? %></td>
      </tr>
      <% unless dp.sdp_log_file.nil? %>
          <% dp.sdp_log_file.each do |dpl| %>
              <tr>
                <td><%= dpl %></td>
              </tr>
          <% end %>
      <% end %>
  <% end %>
  </tbody>
</table>
