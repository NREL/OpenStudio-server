{
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_KEY` }}"
  },
  "builders": [
    {
      "type": "amazon-instance",
      "source_ami": "ami-369c8621",
      "ami_virtualization_type": "hvm",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "account_id": "{{ user `aws_account_id` }}",
      "region": "us-east-1",
      "ami_name": "OpenStudio-Server-Docker-{{ user `version` }}",
      "ami_description": "This AMI serves as the base image used for deploying the OpenStudio Server on AWS using Docker. The base OpenStudio Server image from DockerHub on this AMI is {{ user `openstudio_server_base_version` }}.",
      "instance_type": "c3.large",
      "s3_bucket": "openstudio-server-artifacts/docker-ami/{{ user `version` }}",
      "x509_cert_path": "{{ user `x509_cert_path` }}",
      "x509_key_path": "{{ user `x509_key_path` }}",
      "ssh_username": "ubuntu",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "device_name": "/dev/sdc",
          "virtual_name": "ephemeral1"
        }
      ],
      "bundle_destination": "/mnt",
      "bundle_vol_command": "sudo su --preserve-environment -c \"ec2-bundle-vol -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -e {{.PrivatePath}}/* -d {{.Destination}} -p {{.Prefix}} --no-filter\"",
      "bundle_upload_command": "sudo su --preserve-environment -c \"ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --region {{.Region}} --retry\"",
      "tags": {
        "generated_by_packer": "TRUE",
        "created_on": "{{ isotime }}",
        "docker_machine_version": "{{ user `docker_machine_version` }}",
        "docker_compose_version" : "{{ user `docker_compose_version` }}",
        "dockerhub_release_tag": "{{ user `openstudio_server_base_version` }}",
        "oss_ami_version": "{{ user `version` }}",
        "generated_by": "{{ user `generated_by` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/aws_system_init.sh",
      "environment_vars": [
        "DOCKERD_OPTIONS=--graph=/home/ubuntu/docker-data --group docker",
        "DOCKER_MACHINE_VERSION={{ user `docker_machine_version` }}",
        "DOCKER_COMPOSE_VERSION={{ user `docker_compose_version` }}"
      ]
    },
    {
      "type": "shell",
      "script": "./scripts/aws_osserver_init.sh",
      "pause_before": "15s",
      "environment_vars": [
        "OSSERVER_DOCKERHUB_TAG={{ user `openstudio_server_base_version` }}"
      ]
    },
    {
      "type": "file",
      "source": "./docker-compose.aws.yml",
      "destination": "/home/ubuntu/docker-compose.yml"
    },
    {
      "type": "file",
      "source": "./../R",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "file",
      "source": "./../server",
      "destination": "/home/ubuntu/"
    }
  ]
}